@article{EhrlichComprehensiveSituRemote2025,
  title = {A Comprehensive in Situ and Remote Sensing Data Set Collected during the {{HALO}}‚Äì(ùíú ùíû){\textsuperscript{3}} Aircraft Campaign},
  author = {Ehrlich, Andr√© and Crewell, Susanne and Herber, Andreas and Klingebiel, Marcus and L√ºpkes, Christof and Mech, Mario and Becker, Sebastian and Borrmann, Stephan and Bozem, Heiko and Buschmann, Matthias and Clemen, Hans-Christian and De La Torre Castro, Elena and Dorff, Henning and Dupuy, Regis and Eppers, Oliver and Ewald, Florian and George, Geet and Giez, Andreas and Grawe, Sarah and Gourbeyre, Christophe and Hartmann, J√∂rg and J√§kel, Evelyn and Joppe, Philipp and Jourdan, Olivier and Jur√°nyi, Zs√≥fia and Kirbus, Benjamin and Lucke, Johannes and Luebke, Anna E. and Maahn, Maximilian and Maherndl, Nina and Mallaun, Christian and Mayer, Johanna and Mertes, Stephan and Mioche, Guillaume and Moser, Manuel and M√ºller, Hanno and P√∂rtge, Veronika and Risse, Nils and Roberts, Greg and Rosenburg, Sophie and R√∂ttenbacher, Johannes and Sch√§fer, Michael and Schaefer, Jonas and Sch√§fler, Andreas and Schirmacher, Imke and Schneider, Johannes and Schnitt, Sabrina and Stratmann, Frank and Tatzelt, Christian and Voigt, Christiane and Walbr√∂l, Andreas and Weber, Anna and Wetzel, Bruno and Wirth, Martin and Wendisch, Manfred},
  date = {2025-04-01},
  journaltitle = {Earth System Science Data},
  volume = {17},
  number = {3},
  pages = {1295--1328},
  publisher = {Copernicus GmbH},
  issn = {1866-3508},
  doi = {10.5194/essd-17-1295-2025},
  url = {https://essd.copernicus.org/articles/17/1295/2025/},
  urldate = {2025-04-25},
  abstract = {The HALO‚Äì(ùíúùíû)3 aircraft campaign was carried out in March and April 2022 over the Norwegian and Greenland seas, the Fram Strait, and the central Arctic Ocean. Three research aircraft ‚Äì the High Altitude and Long Range Research Aircraft (HALO), Polar 5, and Polar 6 ‚Äì performed 54 partly coordinated research flights on 23 flight days over areas of open ocean, the marginal sea ice zone (MIZ), and the central Arctic sea ice. The general objective of the research flights was to quantify the evolution of air mass properties during moist and warm-air intrusions (WAIs) and cold-air outbreaks (CAOs). To obtain a comprehensive data set, the three aircraft operated following different strategies. HALO was equipped with active and passive remote sensing instruments and dropsondes to cover the regional evolution of cloud and thermodynamic processes. Polar 5 carried a similar remote sensing payload to HALO, and Polar 6 was instrumented with in situ cloud, aerosol, and trace gas instruments focusing on the initial air mass transformation close to the MIZ. The processed, calibrated, and validated data are published in the World Data Center PANGAEA as instrument-separated data subsets and listed in aircraft-separated collections for HALO (Ehrlich et al., 2024a, https://doi.org/10.1594/PANGAEA.968885), Polar 5 (Mech et al., 2024a, https://doi.org/10.1594/PANGAEA.968883), and Polar 6 (Herber et al., 2024, https://doi.org/10.1594/PANGAEA.968884). A detailed overview of the available data sets is provided here. Furthermore, the campaign-specific instrument setup, the data processing, and quality are summarized. Based on measurements conducted during a specific CAO, it is shown that the scientific analysis of the HALO‚Äì(ùíúùíû)3 data benefits from the coordinated operation of the three aircraft.},
  langid = {english}
}

